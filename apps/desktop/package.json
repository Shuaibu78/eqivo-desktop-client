{
  "name": "@eqivo/desktop",
  "packageManager": "yarn@4.12.0",
  "main": "./dist/main.js",
  "homepage": "https://github.com/eqivo/eqivo-desktop-client",
  "author": "Shuaib",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Eqivo Desktop Client",
  "keywords": [
    "eqivo",
    "desktop",
    "client"
  ],
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "26.0.12"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "dotenv": "^16.4.5",
    "electron-log": "^5.4.3",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "tsc",
    "start": "yarn build && electron ./dist/main.js",
    "dev": "tsc",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:all": "electron-builder --mac --win",
    "build:all": "yarn workspace @eqivo/frontend build && yarn build && yarn dist:all"
  }
}
